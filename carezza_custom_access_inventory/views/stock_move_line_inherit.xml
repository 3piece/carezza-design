<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="carezza_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.inherit.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
            	<field name="pallet_number" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}" context="{'default_product_id': product_id, 'default_company_id': company_id, 'active_picking_id': picking_id}" optional="show"/>
            	<field name="hides" groups="stock.group_production_lot" attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}" context="{'default_product_id': product_id, 'default_company_id': company_id, 'active_picking_id': picking_id}" optional="show"/>
            </xpath>

	        
	        <xpath expr="//field[@name='lot_id']" position="replace">
	        	<field name="lot_id" 
	        		   groups="stock.group_production_lot" 
	        		   attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}" 
	        		   context="{'move_id':move_id, 'default_product_id': product_id, 'default_company_id': company_id, 'active_picking_id': picking_id}" 
	        		   optional="show"/>
	        </xpath>        
        </field>        
    </record>
</odoo>
