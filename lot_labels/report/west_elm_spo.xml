<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="fabric_spo">
			<table class="table table-bordered table-format" t-if="picking.move_lines" >
				<tr class='height-95 font-header'>
					<td class="table-active text-center align-middle" colspan="4">
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</td>
				</tr>


				<tr class='height-60' >
					<td style='width: 50% !important;' colspan="1" class="text-left align-middle font-label ">
						<strong>MPO :</strong>
					</td>
					<td colspan="3" class="text-left align-middle font-size-24">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
				</tr>

				<tr class='height-60'>
					<td colspan="1" class="text-left align-middle font-label ">
						<strong>Code: </strong>
					</td>
					<td colspan="3" class="text-left align-middle font-size-24">
						<span t-field="move_line.product_id.default_code"></span>
					</td>					
				</tr>

				<tr class='height-60'>
					<td colspan="1" class="text-left align-middle font-label ">
						<strong>Quantity: </strong>
					</td>
					<td colspan="3" class="text-left align-middle font-size-24">
						<t t-if="move_line.lot_id.product_qty > 0">
							<span t-field="move_line.lot_id.product_qty"></span>
						</t>
						<t  t-else="">
							<span t-field="move_line.lot_id.vendor_qty"></span>
						</t>
						<span t-field="move_line.product_uom_id"></span>
					</td>
				</tr>

				<tr class='height-60'>
					<td  class="border-right-black" colspan="1" >
						<strong class="text-left align-middle font-label">Ship Date: </strong>
						<span  style='padding-left:15px' t-field="move_line.date" class="text-left align-middle font-size-24"
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>
								

					<td  colspan="1" >
						<strong  style='padding-left:15px' class="text-left align-middle font-label ">Supplier:</strong>
						<span style='padding-left:15px' class="text-left align-middle font-size-24" t-field="move_line.lot_id.supplier_id.name"></span>
					</td>				
				</tr>

				<t t-if="move_line.product_id.tracking != 'none'">
					<tr class='height-60'>
						<td class="text-center align-middle " colspan="1" style=' width:40%'>
								<h1 style="font-size: 34px; font-weight: bolder; color: white; background: black;">
									WEST ELM SPO
								</h1>
						</td>
						<td class="text-center align-middle" colspan="6" t-if="move_line.product_id.tracking == 'none'"
							style="border-right-color: 2px solid black">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									class='img-barcode' alt="Barcode" />
								<p t-esc="move_line.product_id.barcode" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
						<td class="text-center align-middle" colspan="6" t-if="move_line.product_id.tracking != 'none'"
							style="height: 61px;border-right-color: black;border-right-width: 2px;">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									class='img-barcode' alt="Barcode" />
								<p t-esc="move_line.lot_id.name" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>						
						
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>



				