<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="fabric_spo">
			<table class="table table-bordered"
				style="border: 2px solid black;height:100%;width: 98%;font-weight: bold;"
				t-if="picking.move_lines" >
				<tr>
					<td class="table-active text-center align-middle"
						style="height: 160px; font-size:50px"
						colspan="4">
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</td>
				</tr>


				<tr style="height: 90px;font-size:20px">
					<td colspan="1" class="text-left align-middle" style='border-right-color: white;color: gray'>
						<strong>MPO :</strong>
					</td>
					<td colspan="3" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
				</tr>

				<tr style="height: 90px;font-size:20px" >
					<td colspan="1" class="text-left align-middle"  style='border-right-color: white;color: gray'>
						<strong>Code: </strong>
					</td>
					<td colspan="3" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.product_id.default_code"></span>
					</td>					
				</tr>

				<tr style="height: 90px;font-size:20px">
					<td colspan="1" style='color: gray;border-right-color: white'  class="text-left align-middle ">
						<strong>Quantity: </strong>
					</td>
					<td colspan="3" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.lot_id.vendor_qty"></span>
						<span t-field="move_line.product_uom_id"></span>
					</td>
				</tr>

				<tr style="height: 90px;font-size:20px" >
					<td  style='color: gray; width:50%' class="text-left align-middle" colspan="1">
						<strong>Ship Date: </strong>
						<span t-field="move_line.date" style="color: black"
							t-options='{"format": "dd/MM/yyyy"}'></span>
					</td>
								

					<td  style='width:50%;border-right-color: black;border-right-width: 2px;' class="text-left align-middle" colspan="1">
						<strong  style='color: gray' >Supplier:</strong>
						<span style="color: black" t-field="move_line.lot_id.supplier_id.name"></span>
					</td>				
				</tr>

				<t style="height: 90px;font-size:20px" t-if="move_line.product_id.tracking != 'none'">
					<tr>
						<td class="text-center align-middle " colspan="1" style=' width:40%'>
								<h1 style="font-size: 60px; font-weight: bolder; color: white; background: black;">
									WEST ELM SPO
								</h1>
						</td>
						<td class="text-center align-middle" colspan="6" t-if="move_line.product_id.tracking == 'none'"
							style="height: 6rem;border-right-color: 2px solid black">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									style="width:100%;height:199px" alt="Barcode" />
								<p t-esc="move_line.product_id.barcode" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
						<td class="text-center align-middle" colspan="6" t-if="move_line.product_id.tracking != 'none'"
							style="height: 6rem;border-right-color: black;border-right-width: 2px;">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									style="width:100%;height:199px" alt="Barcode" />
								<p t-esc="move_line.lot_id.name" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>						
						
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>



				