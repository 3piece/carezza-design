<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="material">
			<table class="table table-bordered"
				style="border: 2px solid black;height:100%;width: 100%;font-weight: bold;"
				t-if="picking.move_lines" >
				<tr>
					<td class="table-active text-center align-middle"
						style="height: 160px; font-size:50px"
						t-if="move_line.product_id.material_type == 'Material'"
						colspan="4">
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</td>
				</tr>


				<tr style="height: 120px;font-size:24px">
					<td colspan="2" class="text-left align-middle" style='border-right-color: white;color: gray'>
						<strong>MPO :</strong>
					</td>
					<td colspan="2" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
				</tr>

				<tr style="height: 120px;font-size:24px" >
					<td colspan="2" class="text-left align-middle"  style='border-right-color: white;color: gray'>
						<strong>Code: </strong>
					</td>
					<td colspan="2" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.product_id.default_code"></span>
					</td>					
				</tr>

				<tr style="height: 120px;font-size:24px">
					<td colspan="2" style='color: gray;border-right-color: white'  class="text-left align-middle ">
						<strong>Roll Length: </strong>
					</td>
					<td colspan="2" class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.move_id.product_uom_qty"></span>
						<span t-field="move_line.product_uom_id"></span>
					</td>
				</tr>

				<tr style="height: 120px;font-size:24px" t-if="move_line.product_id.material_type != 'Accessories'">
					<td  style='color: gray;border-right-color: white' class="text-left align-middle">
						<strong>Ship Date: </strong>
					</td>
					
					<td class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.date"
							t-options='{"format": "dd/MM/yyyy"}'></span>
					</td>					

					<td  style='color: gray;border-right-color: white' class="text-left align-middle" >
						<strong>Supplier:</strong>
					</td>
					<td class="text-left align-middle" style="font-size:35px">
						<span t-field="move_line.lot_id.supplier_id.name"></span>
					</td>					
				</tr>

				<t style="height: 120px;font-size:24px" t-if="move_line.product_id.tracking != 'none'">
					<tr>
						<td class="text-center align-middle" colspan="4">
							<t t-if="move_line.lot_name or move_line.lot_id">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									style="width:100%;height:190px" alt="Barcode" />
								<span t-esc="move_line.lot_id.name" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>
