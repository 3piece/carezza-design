<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="fabric">
			<!-- style="border: 2px solid black ;height:100%;width: 98%;font-weight: bold;" -->
			<table class="table table-bordered table-format" t-if="picking.move_lines" >
				<tr class='height-95 font-header '>
					<td class="table-active text-center align-middle" style='border: 10px solid black  !important;'
						colspan="2">
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</td>
				</tr>

				<tr class='height-60'>
					<td style='width: 50% !important;border-right: 0px !important'  class="text-left align-middle font-label">
						<strong>MPO :</strong>
					</td>
					<td  class="text-left align-middle font-size-24" style='border-left: 0px !important'>
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
				</tr>

				<tr class='height-60' >
				<td  class="text-left align-middle font-label" style='border-right: 0px !important'>
						<strong>Code: </strong>
					</td>
					<td  class="text-left align-middle font-size-24" style='border-left: 0px !important'>
						<span t-field="move_line.product_id.default_code"></span>
					</td>					
				</tr>

				<tr class='height-60'>
					<td  class="text-left align-middle font-label" style='border-right: 0px !important'>
						<strong>Quantity: </strong>
					</td>
					<td  class="text-left align-middle font-size-24" style='border-left: 0px !important'>
						<t t-if="move_line.lot_id.product_qty > 0">
							<span t-field="move_line.lot_id.product_qty"></span>
						</t>
						<t  t-else="">
							<span t-field="move_line.lot_id.vendor_qty"></span>
						</t>
						<span t-field="move_line.product_uom_id"></span>
					</td>
				</tr>

				<tr class='height-60'>
					<td   class="text-left align-middle font-label">
						<strong>Ship Date: </strong>
						<span t-field="move_line.date" class ='font-size-24' style="color: black;padding-left:15px"
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>
								
					<td  style='color: gray; font-size:14px' class="text-left align-middle" >
						<strong style="padding-left:15px">Supplier:</strong>
						<span class ='font-size-24' style="color: black;padding-left:15px" t-field="move_line.lot_id.supplier_id.name"></span>
					</td>				
				</tr>

				<t  t-if="move_line.product_id.tracking != 'none'">
					<tr class='height-60'>
						<td class="text-center align-middle" colspan="2">
							<t t-if="move_line.lot_id.name">
								<img class='img-barcode'
									 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									 alt="Barcode" />
								<p t-esc="move_line.lot_id.name"  style='font-size:14px'/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
				
				<t t-if="move_line.product_id.tracking == 'none'">
					<tr style="height:61px;font-size:24px">
						<td class="text-center align-middle" colspan="2"
							>
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									class='img-barcode'
									alt="Barcode" />
								<p t-esc="move_line.product_id.barcode" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>			
			</table>
		</template>

	</data>
</odoo>
