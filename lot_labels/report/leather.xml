<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="leather">

			<table class="table-bordered table-format" t-if="picking.move_lines" >
				<tr >
					<th colspan="6" class=" text-center align-middle height-95 font-header">
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</th>
				</tr>

				<tr class='height-60'>
					<td colspan="2" class="text-left align-middle  border-right-0 label-leather">
						<strong>MPO :</strong>
					</td>
					<td colspan="4"  class="text-left align-middle font-size-24 border-left-0">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>
				</tr>
				<tr class='height-60'>
					<td colspan="2" class="text-left align-middle  border-right-0 label-leather">
						<strong>Code: </strong>

					</td>
					<td colspan="4" class="text-left align-middle font-size-24 border-left-0">
						<span t-field="move_line.product_id.default_code"></span>
					</td>
				</tr>

				<tr class='height-60'>
					<td class="text-left align-middle  border-right-0 label-leather">
						<strong>Quantity: </strong>
					</td>
					<td  class="text-right align-middle font-size-24 border-left-0 border-right-0">

							<span t-field="move_line.qty_done"></span>
						
					</td>
					<td  class=" text-left align-middle font-size-24 border-right-black border-left-0">
						<span class='mg-left-5' t-field="move_line.product_uom_id"></span>
					</td>
					<td class="text-right align-middle font-size-24 border-right-0">
						<span t-field="move_line.hides"></span>

					</td>
					<td colspan="2" class="text-left align-middle  border-left-0 label-leather">
						<strong>Hides</strong>
					</td>
				</tr>

				<tr class='height-60'>
					<td colspan="2" class="text-left align-middle">
						<strong class='label-leather'>Ship Date: </strong>
						<span t-field="move_line.lot_id.ship_date" class='font-size-24'
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>
					
					<td colspan="2" class="text-left align-middle border-right-0">
						<strong class='label-leather'>Supplier:</strong>
						<span class='font-size-24' t-field="move_line.lot_id.supplier_id.name"></span>
					</td>
					
					<td  colspan="2" class=" text-left align-middle">
						<strong class='label-leather'>Pallet No.</strong>
						<span  class='font-size-24' t-field="move_line.pallet_number"></span>
					</td>
					

				</tr>

				<t t-if="move_line.product_id.tracking != 'none'">
					<tr class='border-bottom-10'>
						<td class="text-center align-middle padding-top-bot-8" colspan="6" 
							style="height: 61px">
							<t t-if="move_line.lot_id.name">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									class='img-barcode'
									alt="Barcode" />
								<span t-esc="move_line.lot_id.name"  class='label-barcode'/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
				
				<t  t-if="move_line.product_id.tracking == 'none'">
					<tr class='height-60 border-bottom-10'>
						<td class="text-center align-middle padding-top-bot-8" colspan="6"
							style="height: 61px">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									class='img-barcode'
									alt="Barcode" />
								<span t-esc="move_line.product_id.barcode"  class='label-barcode'/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>
