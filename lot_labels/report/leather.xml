<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="leather">

			<table class="table table-bordered"
				style="border: 2px solid black;height:100%;width: 100%;font-weight: bold;"
				t-if="picking.move_lines" >
				
				<tr style="height: 160px;font-size:50px">
					<th colspan="6" class="table-active text-center align-middle"
						>
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</th>
				</tr>

				<tr style="height: 120px;font-size:24px">
					<td colspan="2" class="text-left align-middle"
						style='border-right-color: white;color: gray'>
						<strong>MPO :</strong>

					</td>
					<td colspan="4" class="text-left align-middle"  style='font-size:35px !important'>
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>
				</tr>
				<tr style="height: 120px;font-size:24px">
					<td colspan="2" class="text-left align-middle"
						style='border-right-color: white;color: gray;'>
						<strong>Code: </strong>

					</td>
					<td colspan="4" class="text-left align-middle" style='font-size:35px !important'>
						<span t-field="move_line.product_id.default_code"></span>
					</td>
				</tr>

				<tr style="height: 120px;font-size:24px">
					<td style='border-right-color: white;color: gray;'
						class="text-left align-middle">
						<strong>Quantity: </strong>
					</td>
					<td style='font-size:35px !important'
						class="text-left align-middle">
						<span t-field="move_line.move_id.product_uom_qty"></span>
					</td>
					<td colspan="1" style='font-size:35px !important'
						class="text-left align-middle">
						<span t-field="move_line.product_uom_id"></span>
					</td>
					<td style='font-size:35px !important'
						class="text-left align-middle">
						<span t-field="move_line.number_of_skins"></span>

					</td>
					<td colspan="2" class="text-left align-middle">
						<strong style="color: gray">Hides</strong>
					</td>
				</tr>

				<tr style="height: 120px;font-size:24px">
					<td style='border-right-color: white;color: gray;' class="text-left align-middle">
						<strong>Ship Date: </strong>
					</td>
					<td style='border-right-color: white;font-size:35px !important' class="text-left align-middle">
						<span t-field="move_line.date"
							t-options='{"format": "dd/MM/yyyy"}'></span>
					</td>
					<td style='border-right-color: white;color: gray;' class="text-left align-middle">
						<strong>Supplier:</strong>
					</td>
					<td style='border-right-color: white;font-size:35px !important' class="text-left align-middle">
						<span t-field="move_line.lot_id.supplier_id.name"></span>
					</td>
					<td style='border-right-color: white;color: gray;' class="text-left align-middle">
						<strong>Pallet Number: </strong>
					</td>
					<td  style='border-right-color: white;font-size:35px !important' class="text-left align-middle">
						<span t-field="move_line.pallet_number"></span>
					</td>

				</tr>

				<tr style="height: 120px;font-size:24px">
					<td class="text-center align-middle" colspan="6"
						style="height: 6rem;">
						<t t-if="move_line.product_id.barcode">
							<img
								t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
								style="width:100%;height:199px" alt="Barcode" />
							<span t-esc="move_line.product_id.barcode" />
						</t>
						<t t-else="">
							<span class="text-muted">No barcode available</span>
						</t>
					</td>
				</tr>
			</table>

		</template>

	</data>
</odoo>
