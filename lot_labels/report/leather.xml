<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="leather">

			<table class="table table-bordered table-format" t-if="picking.move_lines" >
				<tr class='height-95 font-header'>
					<th colspan="6" class="table-active text-center align-middle"
						>
						<strong t-esc="move.product_id.name" />
						<span>-</span>
						<strong t-esc="move.product_id.attribute_value" />
					</th>
				</tr>

				<tr class='height-60'>
					<td colspan="2" class="text-left align-middle font-label ">
						<strong>MPO :</strong>
					</td>
					<td colspan="4"  class="text-left align-middle font-size-24">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>
				</tr>
				<tr class='height-60'>
					<td colspan="2" class="text-left align-middle font-label ">
						<strong>Code: </strong>

					</td>
					<td colspan="4" class="text-left align-middle font-size-24">
						<span t-field="move_line.product_id.default_code"></span>
					</td>
				</tr>

				<tr class='height-60'>
					<td class="text-left align-middle font-label ">
						<strong>Quantity: </strong>
					</td>
					<td  class="text-left align-middle font-size-24">
						<t t-if="move_line.lot_id.product_qty > 0">
							<span t-field="move_line.lot_id.product_qty"></span>
						</t>
						<t  t-else="">
							<span t-field="move_line.lot_id.vendor_qty"></span>
						</t>
					</td>
					<td colspan="1" class="text-left align-middle font-size-24">
						<span t-field="move_line.product_uom_id"></span>
					</td>
					<td class="text-left align-middle font-size-24">
						<span t-field="move_line.hides"></span>

					</td>
					<td colspan="2" class="text-left align-middle font-label">
						<strong>Hides</strong>
					</td>
				</tr>

				<tr class='height-60'>
					<td class="text-left align-middle font-label ">
						<strong>Ship Date: </strong>
					</td>
					<td class="border-right-black text-left align-middle font-size-24">
						<span t-field="move_line.date"
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>
					<td class="text-left align-middle font-label">
						<strong>Supplier:</strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black">
						<span t-field="move_line.lot_id.supplier_id.name"></span>
					</td>
					<td style='border-right-color: white;color: gray;font-size:14px' class="text-left align-middle">
						<strong>Pallet Number: </strong>
					</td>
					<td  class="text-left align-middle font-size-24">
						<span t-field="move_line.pallet_number"></span>
					</td>

				</tr>

				<t t-if="move_line.product_id.tracking != 'none'">
					<tr class='height-60'>
						<td class="text-center align-middle" colspan="6"
							style="height: 61px">
							<t t-if="move_line.lot_id.name">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									class='img-barcode'
									alt="Barcode" />
								<p t-esc="move_line.lot_id.name" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
				
				<t  t-if="move_line.product_id.tracking == 'none'">
					<tr class='height-60'>
						<td class="text-center align-middle" colspan="6"
							style="height: 61px">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									class='img-barcode'
									alt="Barcode" />
								<p t-esc="move_line.product_id.barcode" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>
