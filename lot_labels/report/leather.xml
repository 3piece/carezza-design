<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="leather">

			<table class="table-bordered table-format" t-if="picking.move_lines" >
				<colgroup>
					<col style="width: 15%;" span="1"></col>
					<col style="width: 27%;" span="1"></col>
					<col style="width: 17%;" span="1"></col>
					<col style="width: 19%;" span="1"></col>
					<col style="width: 11%;" span="1"></col>
					<col style="width: 11%;" span="1"></col>
				</colgroup>

				<tr>
					<td colspan="6" class="height-95 font-header thick-border">
						<div class="row td-div text-center">
                            <div>
                                <span class="line"><strong t-esc="move.product_id.name" /></span>
                                <span>-</span>
                                <span class="line"><strong t-esc="move.product_id.attribute_value" /></span>
                            </div>
                        </div>
					</td>
				</tr>

				<tr class='height-59'>
					<td colspan="1" class="text-left align-middle width-81 border-right-0 label-leather">
						<strong>MPO: </strong>
					</td>
					<td colspan="1"  class="text-left align-middle font-size-24 border-left-0">
						<span t-field="move_line.formatted_po_id_name"></span> 
					</td>
					<td colspan="1" class="text-left align-middle width-81 border-right-0 label-leather">
						<strong>Supplier: </strong>
					</td>
					<td colspan="3"  class="text-left align-middle font-header-16 border-left-0">
						<span t-field="move_line.supplier" style="white-space: normal;"></span> 
					</td>					
				</tr>
				<tr class='height-59'>
					<td colspan="1" class="text-left align-middle  border-right-0 label-leather">
						<strong>Code: </strong>
					</td>
					<td colspan="1" class="text-left align-middle font-size-24 border-left-0">
						<span t-field="move_line.product_id.default_code"></span>
					</td>
					<td colspan="1" class="text-left align-middle  border-right-0 label-leather">
						<strong>Description: </strong>
					</td>
					<td colspan="3" class="text-left align-middle font-header-16 border-left-0">
						<span t-field="move_line.material_desc" style="white-space: normal;"></span>
					</td>					
				</tr>

				<tr class='height-59'>
					<td colspan="1" class="text-left align-middle  border-right-0 label-leather">
						<strong>Quantity: </strong>
					</td>
					<td colspan="1" class="text-left align-middle font-size-24 border-left-0 border-right-0">
						<t t-if="move_line.qty_done >0">
							<span t-field="move_line.qty_done"></span>
                            <span class='mg-left-5' t-field="move_line.product_uom_id"></span>
						</t>
						<t t-else="">
							<span t-field="move_line.product_uom_qty"></span>
                            <span class='mg-left-5' t-field="move_line.product_uom_id"></span>
						</t>
					</td>
					<td  colspan="1" class=" text-left align-middle border-right-0">
						<strong class='label-leather'>Pallet No.: </strong>
					</td>
					<td  colspan="1" class=" text-left align-middle border-left-0">
						<span t-if='move_line.pallet_number > 0' class='font-size-24' t-field="move_line.pallet_number"></span>
					</td>
					<td colspan="1" class="text-right align-middle font-size-24 border-right-0" style='width:51px'>
						<span t-if='move_line.hides > 0' t-field="move_line.hides"></span>
					</td>
					<td colspan="1" class="text-right align-middle  border-left-0 label-leather">
						<strong style='margin-right:10px'>Hides</strong>
					</td>
				</tr>

				<tr class='height-59'>
					<td colspan="1" class="text-left align-middle border-right-0 label-leather">
						<strong>Ship Date: </strong>
					</td>
					<td colspan="1" class="text-left align-middle font-size-24 border-right-black border-left-0">
						<t t-if='move_line.lot_id.ship_date'>
							<span t-field="move_line.lot_id.ship_date"	t-options='{"format": "dd MMM yyyy"}'></span>
						</t>
						<t t-else="">
							<span> </span>
						</t>
					</td>
					<td colspan="1" class="text-left align-middle  border-right-0 label-leather">
						<strong>Country of Origin: </strong>
					</td>
					<td colspan="3" class="text-left align-middle font-header-16 border-left-0">
						<span t-field="move_line.coo" style="white-space: normal;"></span>
					</td>						
				</tr>

				<t t-if="move_line.product_id.tracking != 'none'">
					<tr class='border-bottom-10'>
						<td colspan="2" class="text-center align-middle font-header-16 border-left-0">
							<span t-field="move_line.remark" style="white-space: normal;"></span>
						</td>	
						<td class="text-center align-middle padding-top-bot-8" colspan="4" 
							style="height: 60px">
							<t t-if="move_line.lot_id.name">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 400, 200)"
									class='img-barcode'
									alt="Barcode" />
								<span t-esc="move_line.lot_id.name"  class='label-barcode'/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
				
				<t  t-if="move_line.product_id.tracking == 'none'">
					<tr class='border-bottom-10'>
						<td colspan="3" class="text-center align-middle font-header-16 border-left-0">
							<span t-field="move_line.remark" style="white-space: normal;"></span>
						</td>	
						<td class="text-center align-middle padding-top-bot-8" colspan="4"
							style="height: 60px">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 400, 200)"
									class='img-barcode'
									alt="Barcode" />
								<span t-esc="move_line.product_id.barcode"  class='label-barcode'/>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					</tr>
				</t>
			</table>

		</template>

	</data>
</odoo>