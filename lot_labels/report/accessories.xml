<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="accessories_label">
			<table class="table-bordered table-format" t-if="picking.move_lines" >
				<colgroup>
					<col style="width: 12%;" span="1"></col>
					<col style="width: 23%;" span="1"></col>
                    <col style="width: 14%;" span="1"></col>
                    <col style="width: 30%;" span="1"></col>
					<col style="width: 21%;" span="1"></col>
				</colgroup>
				<tr>
                    <td colspan="5" class="height-95 font-header thick-border">
						<div class="row td-div text-center">
                            <div>
                                <span class="line"><strong t-esc="move.product_id.name" /></span>
                                <span>-</span>
                                <span class="line"><strong t-esc="move.product_id.attribute_value" /></span>
                            </div>
                        </div>
					</td>
<!-- 				</tr>
				<tr >
					<td class="text-center height-160" colspan="2">
						<div class="acc-title-top-margin-div"></div>
						<span class="span-160"></span>
						<div class="td-div-160">
							<div class="acc-title-div">
								<div class='font-header two-line-div'>
									<strong t-esc="move.product_id.name" />
								</div>
							</div>

							<div class='font-size-24'>
								<strong t-esc="move.product_id.attribute_value" />
							</div>
						</div>
					</td> -->
				</tr>
				<tr class='height-59'>
					<td class=" align-middle font-label-accessory" >
                        <strong>APO</strong>
                    </td>
                    <td colspan="1" style='width:238px'  class="text-left align-middle font-size-24  border-left-0" >
                        <span t-field="move_line.formatted_po_id_name"></span>
                    </td>
                    <td class=" align-middle font-label-accessory" >
                        <strong>Code</strong>
                    </td>
                    <td colspan="1" style='width:238px'  class="text-left align-middle font-header-16 border-left-0" >
                        <span class="line" style="white-space: normal;"><span t-esc="move.product_id.name" /> - <span t-esc="move.product_id.attribute_value" /></span>
                    </td>
                    <td colspan="1" rowspan="4" class="text-center align-middle td-img-accessory">
						<img
						t-attf-src="/web/image/product.product/#{move_line.product_id.id}/image_256"
						class="img img-fluid img-acc" style="width: 95%;height: auto;" alt="Product image" />
					</td>
  				</tr>
				<tr class='height-59'>
                    <td  class="align-middle  font-label-accessory" >
						<strong>Box #</strong>
					</td>
					<td colspan="1" class="border-left-0 text-left align-middle font-size-24" >
						<t t-if="move_line.lot_id.pallet_number">
							<span t-field="move_line.lot_id.pallet_number"></span>
						</t>
						<t t-elif="move_line.pallet_number">
							<span t-field="move_line.pallet_number"></span>
						</t>
						<t t-else="">
								<span>  </span>
						</t>
					</td>
					<td class="align-middle font-label-accessory">
						<strong>Description</strong>
					</td>
					<td colspan="1" class=" text-left align-middle font-header-16 border-left-0" >
						<span t-field="move_line.material_desc" style="white-space: normal;"></span>
                    </td>
                </tr>
                <tr class='height-59'>   
                    <td class="align-middle font-label-accessory">
						<strong>Quantity</strong>
					</td>
					<td colspan="1" class=" text-left align-middle font-size-24 border-left-0" >
						<t t-if="move_line.qty_done >0">
							<span t-esc="int(move_line.qty_done)"></span>
						</t>
						<t t-else="">
							<span t-esc="int(move_line.product_uom_qty)"></span>
						</t>

						<span t-field="move_line.product_uom_id"></span>
					</td>
                    <td class=" align-middle font-label-accessory" >
                        <strong>Supplier</strong>
                    </td>
                    <td colspan="1" style='width:238px'  class="text-left align-middle font-header-14  border-left-0" >
                        <span t-field="move_line.supplier" style="white-space: normal;"></span>
                    </td>                   
				</tr>
				<tr class='height-59'>
					<td class=" align-middle font-label-accessory">
						<strong>Ship Date</strong>
					</td>
					<td colspan="1" class="font-size-24 text-left align-middle border-left-0">
						<t t-if='move_line.lot_id.ship_date'>
							<span t-field="move_line.lot_id.ship_date"
							t-options='{"format": "dd MMM yyyy"}'></span>
						</t>
						<t t-else="">
							<span>   </span>
						</t>
					</td>
                    <td class="align-middle font-label-accessory">
						<strong>Country of Origin</strong>
					</td>
                    <td colspan="1" class=" text-left align-middle font-header-16 border-left-0" >
						<span t-field="move_line.coo" style="white-space: normal;"></span>
                    </td>
				</tr>

				<tr class='height-70 border-bottom-10'>
                    <td colspan="2" class=" text-center align-middle font-header-16 border-left-0" >
						<span t-field="move_line.remark" style="white-space: normal;"></span>
                    </td>
					<t t-if="move_line.product_id.tracking != 'none'">
						<td class="text-center align-middle" colspan="3">
							<t t-if="move_line.lot_id.name">
								<div class='padding-top-bot-8'>
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
										class='img-barcode' alt="Barcode" />
									<span class ="text-center label-barcode" t-esc="move_line.lot_id.name" />
								</div>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>

					</t>

					<t t-if="move_line.product_id.tracking == 'none'">
						<td class="text-center align-middle" colspan="3">
							<t t-if="move_line.product_id.barcode">
								<div class='padding-top-bot-8'>
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
										class='img-barcode' alt="Barcode" />
									<span class='text-center label-barcode' t-esc="move_line.product_id.barcode" />
								</div>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					
					</t>
				</tr>				
				
			</table>

		</template>

	</data>
</odoo>