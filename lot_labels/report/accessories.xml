<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="accessories_label">
			<table class="table table-bordered table-format" t-if="picking.move_lines" >
				<tr class='height-160 font-header '>
					<td class="table-active text-center align-middle border-right-black"
						colspan="2">
						<div>
							<strong t-esc="move.product_id.name" />
						</div>
						
						<div style="font-size:24px">
							<strong t-esc="move.product_id.attribute_value" />
						</div>
						
					</td>

					<td rowspan="5" style='width: 257px;'>
						<img
							t-attf-src="/web/image/product.product/#{move_line.product_id.id}/image_256"
							class="img img-fluid" style="width: 100%;height: auto;" alt="Product image" />
					</td>
				</tr>
				<tr class='height-60'>
					<td class="text-left align-middle font-label" colspan="1">
						<strong>MPO :</strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black" colspan="1">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
					
				</tr>

				<tr class='height-60'>
					<td class="text-left align-middle font-label" colspan="1">
						<strong>Code: </strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black" colspan="1">
						<span t-field="move_line.product_id.default_code"></span>
					</td>					
					
				</tr>
				


				<tr class='height-60'>
					<td class="text-left align-middle font-label" colspan="1">
						<strong>Quantity: </strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black" colspan="1">
						<t t-if="move_line.lot_id.product_qty > 0">
							<span t-field="move_line.lot_id.product_qty"></span>
						</t>
						<t  t-else="">
							<span t-field="move_line.lot_id.vendor_qty"></span>
						</t>
						
						<span t-field="move_line.product_uom_id"></span>
					</td>					
					
				</tr>



				<tr class='height-60'>
					<td class="text-left align-middle font-label" colspan="1">
						<strong>Ship Date: </strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black" colspan="1">
						<span t-field="move_line.date"
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>					
					
				</tr>
				
				<tr style='height:61px'>
					<td class="text-left align-middle font-label" colspan="1">
						<strong>Supplier:</strong>
					</td>
					<td class="text-left align-middle font-size-24 border-right-black" colspan="1">
						<span t-field="move_line.lot_id.supplier_id.name"></span>
					</td>			
					<t t-if="move_line.product_id.tracking != 'none'">
						<td class="text-center align-middle" colspan="2">
							<t t-if="move_line.lot_id.name">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
									class='img-barcode' alt="Barcode" />
								<p class ="text-center" t-esc="move_line.lot_id.name" style='' />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
				
					</t>
				
					<t t-if="move_line.product_id.tracking == 'none'">
				
						<td class="text-center align-middle" colspan="2">
							<t t-if="move_line.product_id.barcode">
								<img
									t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
									class='img-barcode' alt="Barcode" />
								<p style='font-size:14px' class='text-center' t-esc="move_line.product_id.barcode" />
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					
					</t>
				</tr>				
				
			</table>

		</template>

	</data>
</odoo>
