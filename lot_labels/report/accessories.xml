<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="accessories_label">
			<table class="table-bordered table-format" t-if="picking.move_lines" >
				<tr>
					<td style='width:338px' class="table-active text-center height-160 "
						colspan="2">
						<!-- <div style='height:60px'> -->
						<div class='font-header mg-top-44 mg-bot-32'>
							<strong t-esc="move.product_id.name" />
						</div>
						
						<!-- <div style="font-size:24pt;height:40px"> -->
						<div class='font-size-24 mg-bot-32'>
							<strong t-esc="move.product_id.attribute_value" />
						</div>
						
					</td>

					<td rowspan="4" style='width: 257px;' class="text-center align-middle">
						<img
							t-attf-src="/web/image/product.product/#{move_line.product_id.id}/image_256"
							class="img img-fluid" style="width: 100%;height: auto;" alt="Product image" />
					</td>
				</tr>
				<tr class='height-60'>
					<td style='width:100px' class=" align-middle font-label" colspan="1">
						<strong>MPO :</strong>
					</td>
					<td  style='width:238px'  class="text-center align-middle font-size-24" colspan="1">
						<span t-field="move_line.lot_id.po_id.name"></span>
					</td>					
					
				</tr>

				


				<tr class='height-60'>
					<td class="align-middle font-label" colspan="1">
						<strong>Quantity: </strong>
					</td>
					<td class=" text-center align-middle font-size-24" colspan="1">
						<t t-if="move_line.lot_id.product_qty > 0">
							<span t-field="move_line.lot_id.product_qty"></span>
						</t>
						<t  t-else="">
							<span t-field="move_line.lot_id.vendor_qty"></span>
						</t>
						
						<span t-field="move_line.product_uom_id"></span>
					</td>					
					
				</tr>



				<tr class='height-60'>
					<td class=" align-middle font-label" colspan="1">
						<strong>Ship Date: </strong>
					</td>
					<td class="font-size-24 text-center align-middle" colspan="1">
						<span t-field="move_line.date"
							t-options='{"format": "dd MMM yyyy"}'></span>
					</td>					
					
				</tr>
				
				<tr style='height:61px'>
					<td style='width:100px' class="align-middle  align-middle font-label" colspan="1">
						<strong>Supplier:</strong>
					</td>
					<td style='width:100px' class="text-center align-middle font-size-24" colspan="1">
						<span t-field="move_line.lot_id.supplier_id.name"></span>
					</td>			
					<t t-if="move_line.product_id.tracking != 'none'">
						<td style='width:100px;height:61px' class="text-center align-middle" colspan="2">
							<t t-if="move_line.lot_id.name">
								<div class='padding-top-bot-8' style='height:57px'>
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.lot_id.name, 600, 150)"
										class='img-barcode' alt="Barcode" />
									<span class ="text-center label-barcode" t-esc="move_line.lot_id.name" style='' />
								</div>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
				
					</t>
				
					<t t-if="move_line.product_id.tracking == 'none'">
				
						<td class="text-center align-middle" colspan="2">
							<t t-if="move_line.product_id.barcode">
								<div class='padding-top-bot-8'>
									<img
										t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move_line.product_id.barcode, 600, 150)"
										class='img-barcode padding-top-bot-8' alt="Barcode" />
									<span style='font-size:14px' class='text-center label-barcode' t-esc="move_line.product_id.barcode" />
								</div>
							</t>
							<t t-else="">
								<span class="text-muted">No barcode available</span>
							</t>
						</td>
					
					</t>
				</tr>				
				
			</table>

		</template>

	</data>
</odoo>
