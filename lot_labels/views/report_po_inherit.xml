<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="rfq_purchase"
		inherit_id="purchase.report_purchasequotation_document" >
		<xpath expr="//span[@t-field='order_line.date_planned']" position="replace">
				<span t-field="order_line.date_planned"  t-options='{"format": "dd/MM/yyyy"}'/>
		</xpath>
	</template>
	
	
 	<template id="print_purchase"
		inherit_id="purchase.report_purchaseorder_document" >
		<xpath expr="//p[@t-field='o.date_order']" position="replace">
				<span t-field="o.date_order"  t-options='{"format": "dd/MM/yyyy"}'/>
		</xpath>
		
		<xpath expr="//span[@t-field='line.date_planned']" position="replace">
				<span t-field="line.date_planned"  t-options='{"format": "dd/MM/yyyy"}'/>
		</xpath>		
		
	</template>	

</odoo> 


