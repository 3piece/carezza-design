<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="stock_barcode_lines_template">
        <t t-jquery="t[t-if='lines']" t-operation="before">
            <t t-set="lineCount" t-value="lines.length + 1"/>
        </t>

        <t t-jquery="div.o_barcode_line" t-operation="before">
            <t t-set="lineCount" t-value="lineCount - 1"/>
        </t>

        <t t-jquery="div.o_barcode_line_details" t-operation="before">
            <div t-esc="lineCount + '.'" class="m-auto pr-3 font-weight-normal h4"/>
        </t>
    </t>
</templates>
